---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

const projects = [
  {
    id: 1,
    title: "Projet 1",
    description: "Description du projet 1",
    category: "Catégorie 1",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet1.webp"],
    theme: "sunset",
  },
  {
    id: 2,
    title: "Projet 2",
    description: "Description du projet 2",
    category: "Catégorie 2",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet2.webp"],
    theme: "sunset",
  },
  {
    id: 3,
    title: "Projet 3",
    description: "Description du projet 3",
    category: "Catégorie 3",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet3.webp"],
    theme: "sunset",
  },
  {
    id: 4,
    title: "Projet 4",
    description: "Description du projet 4",
    category: "Catégorie 4",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet4.webp"],
    theme: "sunset",
  },
  {
    id: 5,
    title: "Projet 5",
    description: "Description du projet 5",
    category: "Catégorie 5",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet5.webp"],
    theme: "sunset",
  },
  {
    id: 6,
    title: "Projet 6",
    description: "Description du projet 6",
    category: "Catégorie 6",
    technologies: ["Tech 1", "Tech 2", "Tech 3"],
    images: ["/public/projets/projet6.webp"],
    theme: "sunset",
  },
];
const theme = "sunset"; // Thème pour la page liste des projets
---

<Layout title="Mes Projets - Portfolio Bryan Thierry" theme={theme}>
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-6">
      <h1
        class="font-primary text-5xl text-center mb-12 text-(--bc) comics-glow-hover"
      >
        Mes Projets
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.map((project) => (
            <a href={`/projects/${project.id}`} class="block">
              <Card
                imgSrc={project.images[0]}
                imgAlt={project.title}
                theme={project.theme}
                className="h-full hover:scale-105 transition-transform duration-300"
              >
                <div class="mb-2">
                  <span class="inline-block px-2 py-1 bg-(--p) text-(--pc) rounded text-xs">
                    {project.category}
                  </span>
                </div>

                <h3 class="font-primary text-xl mb-3 text-(--bc)">
                  {project.title}
                </h3>

                <p class="font-secondary text-sm text-(--bc) opacity-70 mb-4">
                  {project.description}
                </p>

                <div class="flex flex-wrap gap-1 mt-auto">
                  {project.technologies.slice(0, 3).map((tech) => (
                    <span class="px-2 py-1 bg-(--s) text-(--sc) rounded text-xs">
                      {tech}
                    </span>
                  ))}
                  {project.technologies.length > 3 && (
                    <span class="px-2 py-1 bg-(--b3) text-(--bc) rounded text-xs">
                      +{project.technologies.length - 3}
                    </span>
                  )}
                </div>
              </Card>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
