---
import BackgroundComics from "./BackgroundComics.astro";
// Import SVGs as raw strings to inline them (ensures display + theming)
import InstagramSVG from "../../public/icons/Instagram-icons.svg?raw";
import LinkedinSVG from "../../public/icons/Linkedin-icons.svg?raw";
import BehanceSVG from "../../public/icons/Behance-icons.svg?raw";

interface Props {
  theme?:
    | "RBA"
    | "les-12-fragments"
    | "orange"
    | "ca-va-trailer"
    | "echo-safe"
    | "omnisphere"
    | "ocean"
    | "cyberpunk"
    | "sunset"
    | "basique";
}

const { theme = "ca-va-trailer" } = Astro.props;

const socialLinks = [
  {
    name: "Instagram",
    url: "https://www.instagram.com/bryan.thierry.75/?hl=fr-ca",
    icon: "Instagram-icons.svg",
    label: "Inspiration & visuels",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/bryan-thierry/",
    icon: "Linkedin-icons.svg",
    label: "Réseau pro",
  },
  {
    name: "Behance",
    url: "https://www.behance.net/bryanthierry1",
    icon: "Behance-icons.svg",
    label: "Portfolio créatif",
  },
];

// Map des SVG par nom pour un accès simple
const svgByName: Record<string, string> = {
  Instagram: InstagramSVG,
  LinkedIn: LinkedinSVG,
  Behance: BehanceSVG,
};
---

<footer
  id="footer"
  data-theme={theme}
  class="relative w-full min-h-[120px] bg-(--b1) border-t-4 border-(--p) overflow-hidden"
>
  <BackgroundComics />
  <div class="grid grid-cols-[1fr_2fr] z-10 relative">
    <div class="relative w-full h-[460px] flex items-center justify-center">
      <img
        src="/avatar/footer.webp"
        alt="Photo de Bryan Thierry"
        class="absolute left-1/2 top-1/2 -translate-x-[40%] -translate-y-1/2 object-contain max-h-[500px] max-w-[400px] brightness-90 contrast-110"
      />
    </div>
    <div class="relative container mx-auto px-6 py-12">
      <!-- Section email -->
      <div class="w-full mb-5 flex">
        <a
          href="mailto:bryan.thierry.pro@gmail.com"
          class="email-box w-full comics-glow-hover-link"
        >
          <p
            class="font-primary text-xl md:text-2xl tracking-tight text-(--bc) uppercase text-center w-full"
          >
            bryan.thierry.pro@gmail.com
          </p>
        </a>
      </div>

      <!-- Grille réseaux sociaux -->
      <div class="social-grid mb-5">
        {
          socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="comics-card social-card p-7 gap-3 min-h-[180px] w-full"
              aria-label={social.name}
            >
              <span
                class="w-14 h-14 transition-all duration-300 shrink-0 social-svg"
                set:html={svgByName[social.name]
                  ?.replace(/fill=\"#000\"/g, 'fill="currentColor"')
                  .replace(/fill=\"#000000\"/g, 'fill="currentColor"')}
              />
              <h3 class="font-primary text-2xl uppercase text-(--bc) tracking-tight comics-glow-hover-link comics-transform-hover">
                {social.name}
              </h3>
              <p class="font-secondary text-sm text-(--bc) text-center opacity-70 leading-6">
                {social.label}
              </p>
              <div class="arrow-circle">
                <svg
                  class="w-3 h-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Section mentions légales -->
  <div class="w-full border-t-2 border-(--bc) py-4 z-10 relative bg-(--b1)">
    <div class="container mx-auto px-6">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-2 text-center md:text-left"
      >
        <p class="font-secondary text-sm text-(--bc)">
          © 2025 Bryan Thierry. Tous droits réservés.
        </p>
        <div class="flex gap-4">
          <a
            href="/mentions-legales"
            class="font-secondary text-sm text-(--bc) hover:text-(--p) transition-colors duration-300"
          >
            Mentions légales
          </a>
          <a
            href="/politique-confidentialite"
            class="font-secondary text-sm text-(--bc) hover:text-(--p) transition-colors duration-300"
          >
            Politique de confidentialité
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
