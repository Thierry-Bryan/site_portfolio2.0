---
import BackgroundComics from "./BackgroundComics.astro";

interface Props {
  theme?: "RBA" | "les-12-fragments" | "orange" | "ca-va-trailer" | "echo-safe" | "omnisphere" | "ocean" | "cyberpunk" | "sunset";
}

const { theme = "ca-va-trailer" } = Astro.props;

const socialLinks = [
  {
    name: "Instagram",
    url: "https://instagram.com",
    icon: "instagram",
    label: "Inspiration & visuels",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com",
    icon: "linkedin",
    label: "Réseau pro",
  },
  {
    name: "Behance",
    url: "https://behance.com",
    icon: "behance",
    label: "Portfolio créatif",
  },
];
---

<footer
  id="footer"
  data-theme={theme}
  class="relative w-full min-h-[120px] bg-(--b1) border-t-4 border-(--p) overflow-hidden"
>
  <BackgroundComics />
  <div class="grid grid-cols-[1fr_2fr] z-10 relative">
    <div class="relative w-full h-[460px] flex items-center justify-center">
      <img
        src="/public/avatar/footer.webp"
        alt="Photo de Bryan Thierry"
        class="absolute left-1/2 top-1/2 -translate-x-[40%] -translate-y-1/2 object-contain max-h-[500px] max-w-[400px] brightness-90 contrast-110"
      />
    </div>
    <div class="relative container mx-auto px-6 py-12">
      <!-- Section email -->
      <div class="w-full mb-5 flex">
        <a
          href="mailto:bryan.thierry.pro@gmail.com"
          class="email-box w-full comics-glow-hover-link"
        >
          <p
            class="font-primary text-xl md:text-2xl tracking-tight text-(--bc) uppercase text-center w-full"
          >
            bryan.thierry.pro@gmail.com
          </p>
        </a>
      </div>

      <!-- Grille réseaux sociaux -->
      <div class="social-grid mb-5">
        {
          socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="comics-card social-card p-7 gap-3 min-h-[180px] w-full "
              aria-label={social.name}
            >
              {social.icon === "instagram" && (
                <svg
                  class="w-12 h-12 transition-all duration-300 text-(--bc) shrink-0 comics-icon-hover"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              )}
              {social.icon === "linkedin" && (
                <svg
                  class="w-12 h-12 transition-all duration-300 text-(--bc) shrink-0 comics-icon-hover"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              )}
              {social.icon === "behance" && (
                <svg
                  class="w-12 h-12 transition-all duration-300 text-(--bc) shrink-0 comics-icon-hover"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M6.938 4.503c.702 0 1.34.06 1.92.188.577.13 1.07.33 1.485.61.41.28.733.65.96 1.12.225.47.34 1.05.34 1.73 0 .74-.17 1.36-.507 1.86-.338.5-.837.9-1.502 1.22.906.26 1.576.72 2.022 1.37.448.66.665 1.45.665 2.36 0 .75-.13 1.39-.41 1.93-.28.55-.67 1-1.16 1.35-.48.348-1.05.6-1.67.767-.61.165-1.252.254-1.91.254H0V4.51h6.938v-.007zM16.94 16.665c.44.428 1.073.643 1.894.643.59 0 1.1-.148 1.53-.447.424-.29.68-.61.78-.94h2.588c-.403 1.28-1.048 2.2-1.9 2.75-.85.56-1.884.83-3.08.83-.837 0-1.584-.13-2.272-.4-.673-.27-1.24-.65-1.72-1.14-.464-.49-.823-1.08-1.077-1.77-.253-.69-.373-1.45-.373-2.27 0-.803.135-1.54.403-2.23.27-.7.644-1.28 1.122-1.79.48-.51 1.063-.895 1.736-1.194.678-.297 1.407-.452 2.17-.452.915 0 1.683.175 2.328.523.645.35 1.178.82 1.6 1.413.424.588.717 1.26.876 2.016.16.758.21 1.548.15 2.372h-7.422c0 .84.28 1.632.71 2.065l-.08.03zm-10.24 3.337c.488 0 .932-.09 1.328-.27.4-.18.74-.44.994-.767.266-.326.46-.715.585-1.163.127-.448.19-.94.19-1.47v-.018c0-.515-.05-.98-.154-1.39-.104-.42-.263-.77-.476-1.06-.21-.28-.48-.49-.8-.65-.324-.16-.7-.24-1.13-.24-.6 0-1.11.15-1.53.44-.42.29-.76.65-1.01 1.08-.25.43-.43.92-.54 1.47-.11.55-.16 1.12-.16 1.7 0 .57.05 1.11.15 1.63.1.52.27.98.51 1.38.24.4.56.72.97.95.41.24.92.36 1.53.36l.09-.03zm9.77-15.02c-.52-.37-1.2-.555-2.04-.555-.56 0-1.04.09-1.44.27-.4.18-.73.42-.99.71-.26.29-.45.63-.58 1-.13.37-.2.75-.2 1.14h4.68c-.07-.78-.39-1.36-.93-1.74l.02.01v.03zm-3.87-.877h5.97v1.41h-5.97v-1.41z" />
                </svg>
              )}
              {social.icon === "github" && (
                <svg
                  class="social-icon"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              )}
              <h3
                class="font-primary text-2xl uppercase text-(--bc) tracking-tight comics-glow-hover-link comics-transform-
              hover"
              >
                {social.name}
              </h3>
              <p class="font-secondary text-sm text-(--bc) text-center opacity-70 leading-6">
                {social.label}
              </p>
              <div class="arrow-circle">
                <svg
                  class="w-3 h-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
  
  <!-- Section mentions légales -->
  <div class="w-full border-t-2 border-(--bc) py-4 z-10 relative bg-(--b1)">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-2 text-center md:text-left">
        <p class="font-secondary text-sm text-(--bc)">
          © 2025 Bryan Thierry. Tous droits réservés.
        </p>
        <div class="flex gap-4">
          <a href="/mentions-legales" class="font-secondary text-sm text-(--bc) hover:text-(--p) transition-colors duration-300">
            Mentions légales
          </a>
          <a href="/politique-confidentialite" class="font-secondary text-sm text-(--bc) hover:text-(--p) transition-colors duration-300">
            Politique de confidentialité
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
